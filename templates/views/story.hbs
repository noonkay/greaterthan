<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/podcast">&larr; back to the podcast</a></p>
				<hr>
				<header>
					<h1>{{data.story.title}}</h1>
				</header>
				<div class="post">
					{{#if data.story.image}}<img src="{{{cloudinaryUrl data.story.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
          <audio controls="controls">
            <source src="{{{data.story.podcastURL}}}">
          </audio>
				</div>
			</article>
		</div>
	</div>
</div>
